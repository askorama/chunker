{
  "version": "0.0.3",
  "name": "@orama/chunker",
  "exports": {
    ".": "./src/main.ts"
  },
  "tasks": {
    "dev": "deno run --watch ./src/main.ts"
  },
  "fmt": {
    "lineWidth": 100,
    "semiColons": false,
    "singleQuote": true,
    "include": ["./src/**/*.ts", "./tests/**/*.ts"]
  },
  "lint": {
    "include": ["./src/**/*.ts", "./tests/**/*.ts"]
  },
  "test": {
    "exclude": ["./tests/node.js/**/*"]
  }
}
